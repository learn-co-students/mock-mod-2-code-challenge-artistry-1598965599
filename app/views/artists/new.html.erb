<div class="container">
    <div class="row justify-content-center m-5">
        <h1> Register A New Artist</h1>
    </div>

    <div class="row justify-content-center">
        <form>
            <div class="form-group">
                <%= form_for @artist do |f| %>
                <%= f.label :name %>
                <%= f.text_field :name %>
                <%= f.label :title %>
                <%= f.text_field :title %>
                <%= f.submit class: "btn btn-primary" %>
            </div>
            <% end %>
        </form>
    </div>
</div>

</div>
</div>