<div class="container">
    <div class="row justify-content-center m-5">
        <h1> Register A New Artist</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col m-5">
            <%= form_for @artist do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :age %>
            <%= f.number_field :age %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.submit class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>