<div class="container">
    <div class="row justify-content-center m-5">
        <h1> Register Artist with an Instrument </h1>
        <div class="row">
            <div class="col m-5">
                <%= form_for @artist_instrument do |f| %>
                <%= f.label "Artist"%>
                <%= f.collection_select :artist_id, Artist.all, :id, :name %>
                <%= f.label "Instrument"%>
                <%= f.collection_select :instrument_id, Instrument.all, :id, :name %>
                <%= f.submit %>
                <% end %>
            </div>
        </div>
    </div>
</div>